page {
    display: block;
    min-height: 100%;
    background: #f6f6f6;
}

.c-container {
    background: #fff;
    padding: 10rpx;
    position: relative;
    color: #47484a;
    margin-bottom: 10rpx;
}

/*address  */

.address-box {
    width: 100%;
    background-color: #fff;
    margin: 20rpx 0;
}

.add-addres {
    width: 100%;
}

.add-address .title {
    font-size: 28rpx;
    color: #000;
    margin-left: 30rpx;
    padding: 40rpx 0 40rpx 90rpx;
}

.show-address {
    width: 664rpx;
    box-sizing: border-box;
    padding-left: 100rpx;
}

.show-address .name-tel {
    font-size: 28rpx;
    color: #000;
    padding: 30rpx 0 20rpx 0;
}

.show-address .addr-text {
    font-size: 24rpx;
    color: #888;
    padding-bottom: 34rpx;
    line-height: 36rpx;
}

/*end  */

/*good  */

.goods-list {
    width: 100%;
    background-color: #fff;
    /* margin-bottom: 20rpx; */
}

.goods-list .list-title {
    font-size: 28rpx;
    color: #000;
    padding:10rpx;
    justify-content: space-between;
    display: flex;
}

.goods-list  .a-goods {
    /* margin-left: 30rpx; */
    display: flex;
    /*justify-content: space-between;*/
    border-top: 1px solid #eee;
    padding:10rpx;

}

.goods-list  .a-goods .img-box {
    width: 300rpx;
    height: 300rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #d8d8d8;
}

.goods-list .img-box .img {
    width: 300rpx;
    height: 300rpx;
}

.goods-list  .a-goods .text-box {
    width: 510rpx;
    box-sizing: border-box;
    padding-top: 10rpx;
}

.a-goods .text-box .arow {
    display: flex;
    justify-content: space-between;
    /* align-items: center; */
}

.a-goods .text-box .arow .goods-name {
    /* width: 360rpx; */
    font-size: 28rpx;
    height: 40%;
    color: #000;
    line-height: 1.6;
    overflow: hidden;
}

.a-goods .text-box .arow01 {
    margin-bottom: 30rpx;
    height: 70%;
}

.a-goods .text-box .arow .goods-price {
    font-size: 26rpx;
    color: #000;
    align-self: flex-start;
}

.a-goods .text-box .arow .goods-label {
    font-size: 26rpx;
    color: #999;
}

.a-goods .text-box .arow .goods-num {
    font-size: 26rpx;
    color: #999;
}

/*end  */

.relet-title {
    font-size: 28rpx;
    color: #ff3000;
    margin: 10rpx 0 20rpx 0;
}

.relet-desc {
    width: 100%;
    font-size: 25rpx;
    color: #8c8c8c;
    margin: 0 0 14rpx;
    display: flex;
}

/* bottom cat  */

/*下方购物车*/

.cart {
    display: -webkit-flex;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background: #fff;
    z-index: 999999;
}

.cart .data {
    flex: 1;
    border-top: 2rpx solid #eee;
}

.cart .data .total {
    color: #f45044;
    font-size: 36rpx;
    line-height: 100rpx;
    padding-left: 60rpx;
}

.cart button {
    width: 200rpx;
    height: 100%;
    font-size: 30rpx;
    background: #009aea;
    color: #fff;
    line-height: 100rpx;
    border-radius: 0;
}

.cart button[disabled][type="default"], wx-button[disabled]:not([type]) {
    color: #fff;
    background-color: #333;
}

.carttxt {
    padding: 0 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #d5d5d5;
}

.cartimg {
    width: 30rpx;
    height: 40rpx;
    position: relative;
    top: 8rpx;
    margin-right: 3px;
}

/*/end  */

.c-container .pro-time {
    margin: 0;
    font-size: 30rpx;
    line-height: 40px;
    border-bottom: 2rpx solid #f8f8f8;
    padding: 0 20rpx;
    color: #0a0a0a;
    display: flex;
}

.c-container .order-item {
    float: none;
    clear: both;
    width: 100%;
    padding: 4rpx;
    position: relative;
    overflow: hidden;
}

.order-item .thumb {
    width: 300rpx;
    float: left;
    padding: 10rpx;
    border: 1rpx solid #e2e2e2;
}

.order-item .thumb image {
    width: 100%;
    height: 250rpx;
}

.left {
    float: left;
}

.right {
    float: right;
}

.order-item-info {
    padding: 10rpx 10rpx 10rpx 330rpx;
    color: #858687;
}

.p-title {
    font-size: 30rpx;
    color: #0a0a0a;
    height: 200rpx;
}

.p-price-detail {
    font-size: 30rpx;
    display: flex;
    padding-top: 40rpx;
}

.p-price-detail .p-price {
    color: #23abec;
    font-size: 30rpx;
    padding-right: 100rpx;
}

.line-tab {
    padding:10rpx;
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
    color: #000;
}

.sub-total {
    border-top: 1rpx solid #e2e2e2;
}

.line-left {
    display: flex;
}

.line-right {
    display: flex;
    width: 20%;
}

.footer {
    text-align: center;
    font-size: 26rpx;
    padding: 28rpx 0 24rpx;
    color: #525252;
}
