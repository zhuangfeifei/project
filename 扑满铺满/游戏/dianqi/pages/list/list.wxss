/**index.wxss**/

page {
    display: block;
    min-height: 100%;
    background: #f6f6f6;
}

.swiper {
    width: 100%;
    height: 450rpx;
}

.flex {
    display: flex;
    flex-direction: row;
}

.nav {
    flex-wrap: wrap;
    justify-content: center;
    padding-top: 20rpx;
    background: #fff;
}

.nav-item {
    margin: 30rpx 50rpx 10rpx;
    width: 80rpx;
}

.nav-item image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.nav-item text {
    width: 80rpx;
    font-size: 24rpx;
    color: #000;
    display: inline-block;
    text-align: center;
    line-height: 50rpx;
}

/* 商品 lists */

.lists-box {
    font-family: Arial, Helvetica, sans-serif;
    background-color: #ebebeb;
    height: 100%;
    margin-top: 20rpx;
}

.item-box {
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #ddd;
    background-color: rgb(255, 255, 255);
}

.item-img, .item-img image {
    width: 100%;
    height: 450rpx;
    overflow: hidden;
}

.item-title {
    display: block;
    width: 100%;
    height: 72rpx;
    padding: 12rpx 30rpx 0;
    line-height: 60rpx;
    font-size: 36rpx;
    color: #444;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.item-content {
    display: -webkit-box;
    width: 100%;
    max-height: 80rpx;
    padding: 0 30rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    color: #666;
    text-overflow: ellipsis;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.item-btm {
    height: 48rpx;
    padding: 24rpx 30rpx 30rpx;
}

.item-price {
    line-height: 48rpx;
    font-size: 40rpx;
    color: #fb5d5d;
}

.item-buy-people {
    float: right;
    width: 154rpx;
    height: 58rpx;
    text-align: center;
    font-size: 28rpx;
    line-height: 58rpx;
    color: #fb5d5d;
    border: 1rpx solid #fb5d5d;
    border-radius: 6rpx;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.item-buy-people .icon-people {
    display: inline-block;
    font-size: 40rpx;
    vertical-align: -14rpx;
    overflow: hidden;
}

button {
    background: rgb(251, 93, 93) !important;
}

/* hot product */

.hot-list {
    border-top: 1px solid #f0f0f0;
    width: 100%;
    padding: 0rpx;
    margin: 0rpx;
    list-style: none;
    overflow: hidden;
    background-color: rgb(255, 255, 255);
}

.hot-list-item {
    display: flex;
}

.hot-item {
    width: 50.5%;
    float: left;
    border: 1px solid #f0f0f0;
    border-left: none;
    border-top: none;
}

.hot-header {
    width: 100%;
    padding: 23px 0 20px;
    background: #fff;
    text-align: center;
    position: relative;
}

.hot-header .title {
    font-size: 16px;
    color: #121212;
}

.hot-header .desc {
    padding-top: 10px;
    margin-bottom: 0;
    font-size: 11px;
    color: #aaa9a9;
}

.hot-item .thumb {
    width: 100%;
    height: 400rpx;
    overflow: hidden;
    display: flex;
    margin: 10rpx auto 0rpx;
}

.hot-item .product-title {
    width: 94%;
    height: 42px;
    font-size: 13px;
    padding: 5px;
    color: #B1B2B1;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: center;
    padding-left: 2px;
    margin: 0 auto;
}

.hot-item .product-price { 
    width: 100%;
    font-size: 13px;
    color: #010101;
    overflow: hidden;
    text-align: center;
    line-height: 30rpx;
    padding-bottom: 20rpx;
}

/*end*/

.footer {
    text-align: center;
    font-size: 11px;
    padding: 28px 0 24px;
    color: #525252;
}
